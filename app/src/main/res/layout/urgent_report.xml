<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SÃ©lectionnez le type d'incident urgent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/inondation"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="136dp"
        android:layout_height="158dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="196dp"
        android:background="@null"
        android:onClick="onClickInondation"

        android:src="@drawable/eau"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/gaz"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fire"
        android:layout_width="127dp"
        android:layout_height="151dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:onClick="onClickFire"
        android:src="@drawable/incendie"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gaz"
        android:layout_width="127dp"
        android:layout_height="170dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="200dp"
        android:background="@null"
        android:onClick="onClickGaz"
        android:src="@drawable/gaz"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/malaise"
        android:layout_width="127dp"
        android:layout_height="150dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:onClick="onClickMalaise"
        android:src="@drawable/malaise"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/vol"
        android:layout_width="127dp"
        android:layout_height="150dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="376dp"
        android:background="@null"
        android:onClick="onClickVol"
        android:src="@drawable/vol"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>